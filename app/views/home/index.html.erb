<div class="row">
  <div class="col-md-2" data-spy="affix"; style="height:100%;width:350px;overflow:auto;">
        <table class="table table-hover">
      <thead>
        <tr>
          <th>Contact</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% if @emails.nil? %>
          "No emails!"

          <% else %>
              <% @emails = @emails.reverse %>
              <% @emails.each do |e| %>
              <tr>
                <% if e.read ==1 %>
                    <tr class="danger">
                <% else %>
                    <tr class="success">
                <% end %>
                <% @from_user = User.find(e.from_user) %>
                <td><%= "#{@from_user.firstname} #{@from_user.lastname}" %></td>  <td><%= e.created_at %></td> 
             
              </tr>
            
          <% end %>
        <% end %>
      </tbody>
    </table>
      </div>
  <div class="col-md-3">
</div>

    
              
