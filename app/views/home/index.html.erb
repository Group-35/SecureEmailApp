
<script language="Javascript" type="text/Javascript">
  window.onload = function(){
    $(".jumbotron").attr('class', 'newClass');
  }
</script>
  
<div class="row">
  <div class="col-md-2"; data-spy="affix"; style="height:100%;width:350px;overflow:auto;">
        <table class="table table-hover";>
      <thead>
        <tr>
          <th>Contact</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% if @emails.nil? %>
          "No emails!"

          <% else %>
            <% if @emails.count == 1 %>
              <tr>
                <% if @emails.read == 1 %>
                  <tr class="success">
                  <% else %>
                  <tr class="danger">
                  <% end %>
                <td><%=emails.from_user%></td>  <td><%= emails.created_at %></td>
              </tr>
            <% else %>
              <% @emails.reverse %>
              <% @emails.each do |e| %>
              <tr>
                <td><%=e.from_user%></td>  <td><%= e.created_at %></td>
              </tr>
              <% end %>
            <% end %>
          <% end %>
      </tbody>
    </table>
      </div>
  <div class="col-md-3">
</div>

